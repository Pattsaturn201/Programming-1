# include <stdio.h>


const num;
int i;
int divisorcount=0;


int main(void)
{
  printf("Enter a integer number to verify if it is prime\n");//
  scanf("%d",num);
  
  if (num<=1)//aplication of 
  {
    printf("the number is not prime\n");
  }
  else
  {
    for ( i = 1; i <= num ; i++)
    {
     if (num%i==0)
     {

       divisorcount++;
       printf ("%d",divisorcount);
    
     }
      if (divisorcount<2)
       {
        printf("Is a prime number\n");
       }
      else if(divisorcount > 2)
      {
        printf("the number is not prime\n");
      }
      
     
    }
    
  } 
  return 0;
}